.info {
    width: 100%;
    height: 100%;
    background-color: #fff;
    padding: 0 12rpx;
    border-top: 1rpx solid #e2e2e2;
}

.info-t {
    color: #999;
    margin: 24rpx 12rpx;
}

.list {
    margin-bottom: 72rpx;
    flex-wrap: wrap;
}

.one {
    width: 218rpx;
    /* height: 110rpx; */
    border: 1rpx solid #ccc;
    border-radius: 16rpx;
    padding: 15rpx 0;
    margin-right: 12rpx;
    margin-left: 12rpx;
    margin-bottom: 24rpx;
}

.one-1 {
    color: #666;
}

.one-2 {
    color: #999;
    font-size: 9pt;
}

.one.active .one-1 {
    color: #ff4544;
}

.one.active .one-2 {
    color: #ff4544;
}

.recharge-btn {
    width: 702rpx;
    height: 96rpx;
    margin: 96rpx 12rpx 0 12rpx;
    border-radius: 48rpx;
    background-color: #ff4544;
